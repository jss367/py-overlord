{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Dominion Genetic Trainer",
            "type": "debugpy",
            "request": "launch",
            "module": "runner",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "/opt/anaconda3/envs/all/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": []
        },
        {
            "name": "Python: Run Strategy Battle",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dominion/simulation/strategy_battle.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "/opt/anaconda3/envs/all/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "ChapelWitch",
                "ChapelWitchTest",
                "--games",
                "10",
                "--print",
                "--no-report"
            ]
        },
        {
            "name": "Python: TorturerEngine vs ChapelWitch",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dominion/simulation/strategy_battle.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "/opt/anaconda3/envs/all/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "TorturerEngine",
                "ChapelWitch",
                "--games",
                "1"
            ]
        },
        {
            "name": "Python: Train strategy (torture_campaign)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/runner.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--board",
                "${workspaceFolder}/boards/torture_campaign.txt",
                "--population-size",
                "20",
                "--generations",
                "10",
                "--games-per-eval",
                "15"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Compare two strategies (torture_campaign)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dominion/simulation/strategy_battle.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "${input:strategy1}",
                "${input:strategy2}",
                "--games",
                "1",
                "--board",
                "${workspaceFolder}/boards/torture_campaign.txt",
                "--output",
                "${workspaceFolder}/reports/torture_campaign_report.html",
                "--log-frequency",
                "1"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Strategy vs Strategy",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dominion/simulation/strategy_battle.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "TorturerEngine",
                "Big Money Smithy",
                "--games",
                "1",
                "--board",
                "${workspaceFolder}/boards/torture_campaign.txt",
                "--output",
                "${workspaceFolder}/reports/bigmoney_vs_bigmoneysmithy_report.html",
                "--log-frequency",
                "1"
            ],
            "justMyCode": true
        }
    ],
}
